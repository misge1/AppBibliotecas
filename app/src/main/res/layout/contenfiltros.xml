<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:paddingBottom="100dp"
    tools:showIn="@layout/activity_filtros"
    android:clipToPadding="false"
    tools:context=".ui.Filtros.FiltrosActivity">


    <LinearLayout
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Disponibilidad"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/title_color"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/buttonSoloDisponibles"
                android:textColor="@color/title_color"
                android:textSize="15dp"
                android:fontFamily="@font/fredoka_regular"
                android:text="Solo disponibles actualmente"
                />

        </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_generos"
            android:layout_width="match_parent"
            android:backgroundTint="@color/background_clear"
            app:cardCornerRadius="10dp"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:textAlignment="center"
                >
                <TextView
                    android:id="@+id/textview_generos"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    app:drawableEndCompat="@drawable/flecha"
                    android:fontFamily="@font/fredoka_regular"
                    android:text="GÃ©neros"
                    android:textSize="20sp"
                   />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_bibliotecas"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/background_clear"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/textview_biblioteca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/fredoka_regular"
                app:drawableEndCompat="@drawable/flecha"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Bibliotecas"
                />

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_idiomas"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/background_clear"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/textview_idiomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/fredoka_regular"
                app:drawableEndCompat="@drawable/flecha"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Idiomas"
                />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/botonBuscar"
                android:layout_width="match_parent"
                android:backgroundTint="@color/background_button_color"
                android:text="Buscar"
                android:fontFamily="@font/fredoka"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>




    </LinearLayout>


</androidx.core.widget.NestedScrollView>