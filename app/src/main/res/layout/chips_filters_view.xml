<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_lista_filtrada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:scrollbars="none"
    android:id="@+id/scrollViewFilters"
    android:fillViewport="true"
    android:clipToPadding="false"
    tools:context=".ui.ListaLibrosFiltrada.ListaFiltradaActivity">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        app:singleLine="true"
        android:scrollbars="horizontal"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.Chip
            android:id="@+id/chipGenero"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="GÃ©neros"
            android:layout_height="wrap_content"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipBiblioteca"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Bibliotecas"
            android:layout_height="wrap_content"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipIdiomas"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Idiomas"
            android:layout_height="wrap_content"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chipDisponibles"
            android:layout_width="wrap_content"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:text="Dsiponibles"
            android:layout_height="wrap_content"/>

    </com.google.android.material.chip.ChipGroup>
</HorizontalScrollView>