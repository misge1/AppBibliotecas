<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_pedido"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:paddingBottom="100dp"
    tools:context=".ui.Pedido.PedidoActivity">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_titulo_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo del libro"
            android:textAlignment="center"
            android:textColor="@color/text_color_dark"
            android:fontFamily="@font/fredoka"
            android:textSize="40dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <ImageView
            android:id="@+id/imagenPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

        </ImageView><Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recogida en biblioteca"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_light"
            android:textColor="@color/text_color_dark"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/textview_biblioteca_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la biblioteca"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recogida antes del día"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_light"
            android:textColor="@color/text_color_dark"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <TextView
            android:id="@+id/textview_fecha_recogida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha de recogida"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devolución prevista"
            android:textSize="16sp"
            android:fontFamily="@font/fredoka_light"
            android:textColor="@color/text_color_dark"
            />
        <TextView
            android:id="@+id/textview_fecha_devolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha de devolución"
            android:fontFamily="@font/fredoka"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp"
            />

    </LinearLayout>





</androidx.core.widget.NestedScrollView>