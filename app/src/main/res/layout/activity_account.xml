<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:contentScrim="?attr/colorPrimary"
            app:toolbarId="@id/toolbar_mine"
            app:collapsedTitleGravity="left"
            android:fitsSystemWindows="true"
            app:expandedTitleGravity="center_horizontal"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/original"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="-1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mirena Gerova"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_gravity="center|bottom"

                >
            </TextView>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_mine"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="parallax"
                app:title=""/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/background_clear"
            app:contentPadding="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Préstamos"
                android:textColor="@color/texto_color"
                android:textSize="16sp"
                android:fontFamily="@font/sarabun_light"

                />


            <com.google.android.material.navigation.NavigationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/background_clear"
                android:layout_marginTop="30dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                >


                <LinearLayout
                    android:id="@+id/linear_layout_prestamos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"


                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="20dp"
                        >
                        <ImageButton
                            android:id="@+id/boton_favoritos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/favorito_icono"
                            android:background="@color/background_clear"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/favoritos"
                            android:textSize="12sp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/boton_encurso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_clear"
                            android:src="@drawable/en_curso_icono"
                           />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/en_curso"
                            android:textSize="12sp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"

                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/boton_recogida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/pendiente_recogida_icono"
                            android:background="@color/background_clear"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/recogida"
                            android:textSize="12sp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/boton_devolver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/background_clear"
                            android:src="@drawable/pendiente_devolucion_icon"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/devolver"
                            android:textSize="12sp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
            </com.google.android.material.navigation.NavigationView>
        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_dark"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre: "
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold">

                        </TextView>

                        <TextView
                            android:id="@+id/nombre_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_light"
                            android:text="Nombre"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/nombre_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_dark"
                            android:scaleType="fitEnd"
                            />


                    </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background_clear"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apellidos: "
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold"
                            android:textColor="@color/texto_color">

                        </TextView>

                        <TextView
                            android:id="@+id/apellidos_text"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            android:text="Apellidos"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/apellidos_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_clear"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_alta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/background_dark"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fecha de alta: "
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold"
                            android:textColor="@color/texto_color">

                        </TextView>

                        <TextView
                            android:id="@+id/alta_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alta"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            android:textSize="16sp">
                        </TextView>
                        <ImageButton
                            android:id="@+id/alta_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_dark"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_clear"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono: "
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold">

                        </TextView>

                        <TextView
                            android:id="@+id/telefono_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Télefono"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/telefono_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_clear"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_dark"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-mail: "
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold">

                        </TextView>

                        <TextView
                            android:id="@+id/email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="email@ejemplo.com"
                            android:textSize="16sp"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            >
                        </TextView>

                        <ImageButton
                            android:id="@+id/email_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_dark"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_domicilio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_clear"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Domicilio: "
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold">

                        </TextView>

                        <TextView
                            android:id="@+id/domicilio_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Domicilio"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/domicilio_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_clear"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_localidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/background_dark"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localidad: "
                            android:textColor="@color/texto_color"
                            android:textSize="16sp"
                            android:fontFamily="@font/sarabun_bold">

                        </TextView>

                        <TextView
                            android:id="@+id/localidad_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localidad"
                            android:textSize="16sp"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/localidad_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_dark"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/background_clear"
                app:cardCornerRadius="15dp"
                app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Código postal: "
                            android:textSize="16sp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_bold"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/cp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:paddingStart="10dp"
                            android:textColor="@color/texto_color"
                            android:fontFamily="@font/sarabun_light"
                            android:text="46023"
                            >

                        </TextView>

                        <ImageButton
                            android:id="@+id/cp_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_icon"
                            android:background="@color/background_clear"
                            android:scaleType="fitEnd"
                            />

                    </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>







</androidx.coordinatorlayout.widget.CoordinatorLayout>









